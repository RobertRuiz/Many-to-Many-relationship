<div class="page-header">
  <%= link_to new_term_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Term
  <% end %>
  <h1>Listing terms</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Definition</th>
            <th>Author</th>
            <th>Web link</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @terms) do |term| %>
            <td><%= term.name %></td>
            <td><%= term.definition %></td>
            <td><%= term.author %></td>
            <td><%= term.web_link %></td>
            <td><%= link_to 'Show', term %></td>
        <td><%= link_to 'Edit', edit_term_path(term) %></td>
        <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
